mixin hotel(hotel)

    .hotel
      .hotel_img 
        a(href=`/all/${hotel._id}`)
          //- img(src=`/images/hotels/${hotel.image}`)
          img(src=`https://res.cloudinary.com/dvew3l921/image/upload/${hotel.image}.jpg`)
      .hotel_info 
        a(href=`/all/${hotel._id}`)
          h3=hotel.hotel_name
        hr
        if(url.startsWith('/all/'))
          p=hotel.hotel_description
          hr
        p=`Star rating: ${hotel.star_rating}`
        p= `Country: ${hotel.country}`
        p= `Cost per night: â‚¹ ${hotel.cost_per_night}`